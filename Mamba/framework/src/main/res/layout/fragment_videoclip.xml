<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="60dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ev_path"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btn_choose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="choose" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_key_frame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="关键帧" />

            <Button
                android:id="@+id/btn_demuxing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="分离" />

            <Button
                android:id="@+id/btn_muxing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="合并" />

            <Button
                android:id="@+id/btn_remuxing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="转格式" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/ev_start"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:inputType="number"
                android:text="8" />

            <EditText
                android:id="@+id/ev_end"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:inputType="number"
                android:text="10" />

            <Button
                android:id="@+id/btn_cut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="cut" />

            <Switch
                android:id="@+id/av_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/ev_rate"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:inputType="numberDecimal"
                android:text="5" />


            <Button
                android:id="@+id/btn_rate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="加减速视频" />

            <Switch
                android:id="@+id/rate_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="打开为减速" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/ev_moment"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:inputType="numberDecimal"
                android:text="5" />


            <Button
                android:id="@+id/btn_moment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="鬼畜或相对论" />

            <Switch
                android:id="@+id/moment_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="打开为相对论" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_add_watermark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="add watermark" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_src1"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="源视频1"
                android:textColor="@android:color/black"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tv_src2"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="源视频2"
                android:textColor="@android:color/black"
                android:textSize="14dp" />

            <Button
                android:id="@+id/btn_merge"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="合并"
                android:textColor="@android:color/black" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_reverse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="未选择"
                android:textColor="@android:color/black"
                android:textSize="14dp" />

            <Button
                android:id="@+id/btn_reverse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="逆序播放"
                android:textColor="@android:color/black" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_reencode"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                />
            <Button
                android:id="@+id/btn_reencode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="mp4重新编码"
                android:padding="5dp"/>
        </LinearLayout>
        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="40dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_hello"
            android:layout_width="match_parent"
            android:layout_height="203dp"
            android:background="@android:color/white"
            android:gravity="center"
            android:textSize="25sp" />
    </LinearLayout>
</ScrollView>